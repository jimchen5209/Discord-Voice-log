{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "type:dependencies"
  ],
  "schedule": [
    "after 11pm every weekend",
    "before 8am every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "addLabels": [
        "update:minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "addLabels": [
        "update:major"
      ]
    },
    {
      "matchUpdateTypes": [
        "pin", 
        "pinDigest", 
        "digest", 
        "lockFileMaintenance",
        "rollback", 
        "bump", 
        "replacement"
      ],
      "automerge": false,
      "addLabels": [
        "update:misc"
      ]
    },
    {
      "groupName": "definitelyTyped packages",
      "matchPackageNames": [
        "@types/**"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "addLabels": [
        "package:npm"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "package:github-actions"
      ]
    }
  ]
}
